{
	"manifest_version": 2,
	"name": "Learntaculous",
	"version": "0.1.2.0",
	"description": "Learntaculous blended learning aggregator.",

	"default_locale": "en",

    "icons": {
        "16": "icon-off-16.png",
        "48": "icon-off-48.png",
        "128": "icon-off-128.png"
    },
    
    "browser_action": {
        "default_title": "Learntaculous",
        "default_icon": "icon-off-48.png",
        "default_popup": "popup.html"
    },
    
    "background": {
        "scripts": ["bg.js"]
    },
    
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
